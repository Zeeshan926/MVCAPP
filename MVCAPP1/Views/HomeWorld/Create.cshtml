@model DogViewModel

<h1>Create</h1>

<hr />

 <div class="row">
     <div class="col-6">
         <div class="card">
             <div class="card-header">
                 <h1>Create a new dog</h1>
                 <div class="card-body">
                    <form asp-controller="HomeWorld" asp-action="CreateDog" method="post">
                        <div class="mb-3">
                            <label class="form-label">Dog Name</label>
                            <input asp-for=DogName type="text" class="form-control" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Dog Age</label>
                            <input asp-for=Age type="number" class="form-control" />
                        </div>
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </form>
                     <div class="card-footer">

                     </div>
                 </div>
             </div>
         </div>

         
     </div>
 </div>

